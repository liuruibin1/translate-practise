<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xxx.system.mapper.SysUserLoginLogMapper">

    <sql id="querySelect">
        <![CDATA[
            SELECT tall.* FROM sys_user_login_log tall
        ]]>
    </sql>

    <sql id="queryWhere">
        <where>
            <!-- id -->
            tall.id IS NOT NULL

            <!-- id -->
            <if test="paramObj.id != null and !paramObj.id.isEmpty()">
                AND tall.id = #{paramObj.id}
            </if>

            <!-- username -->
            <if test="paramObj.username != null">
                AND tall.username = #{paramObj.username}
            </if>

            <!-- is_successful -->
            <if test="paramObj.isSuccessful != null">
                AND tall.is_successful = #{paramObj.isSuccessful}
            </if>

            <!-- remark -->
            <if test="paramObj.remark != null and !paramObj.remark.isEmpty()">
                AND LOWER(tall.remark) LIKE CONCAT('%', LOWER(#{paramObj.remark}), '%')
            </if>

            <!-- create_ts -->

            <!-- 其它字段 -->

            <if test="paramObj.key != null and !paramObj.key.isEmpty()">
                <![CDATA[
                    AND (
                            LOWER(tall.remark) LIKE CONCAT('%', LOWER(#{paramObj.key}), '%')
                        )
                ]]>
            </if>

        </where>
    </sql>

    <sql id="queryOrderBy">
        ORDER BY tall.id
    </sql>

    <select id="queryPage" parameterType="java.util.Map" resultType="com.xxx.system.vo.SysUserLoginLogVO">
        <include refid="querySelect"/>
        <include refid="queryWhere"/>
        <include refid="queryOrderBy"/>
    </select>

</mapper>