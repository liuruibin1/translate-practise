<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd" >
<generatorConfiguration>
    <properties resource="datasource.properties"/>
    <context id="system" targetRuntime="MyBatis3" defaultModelType="flat">

        <property name="javaFileEncoding" value="UTF-8"/>

        <!-- 配置高级扩展插件 -->
        <plugin type="com.xxx.mybatis.generator.plugin.AdvancedAllInOnePlugin">

            <!-- 框架集成配置 -->
            <property name="enableLombok" value="true"/>
            <property name="enableJackson" value="true"/>

            <!-- 目录 -->
            <property name="apiTargetProject" value="../xxx-modules/xxx-system-api/src/main/java"/>
            <property name="serviceTargetProject" value="../xxx-modules/xxx-system-service/src/main/java"/>
            <property name="mapperXmlTargetProject" value="../xxx-modules/xxx-system-service/src/main/resources"/>

            <!-- 包名 -->
            <property name="entityPackage" value="com.xxx.${model.name}.entity"/>
            <property name="voPackage" value="com.xxx.${model.name}.vo"/>
            <property name="providerPackage" value="com.xxx.${model.name}.provider"/>
            <property name="servicePackage" value="com.xxx.${model.name}.service"/>
            <property name="mapperPackage" value="com.xxx.${model.name}.mapper"/>

            <!-- xml 子目录 -->
            <property name="mapperXmlSubDir" value="mybatis-mapper/${model.name}"/>
        </plugin>

        <commentGenerator>
            <property name="suppressAllComments" value="true"/>
            <property name="suppressDate" value="false"/>
            <property name="addRemarkComments" value="false"/>
        </commentGenerator>

        <jdbcConnection driverClass="${mvn.jdbc.driver}"
                        connectionURL="${mvn.jdbc.url}"
                        userId="${mvn.jdbc.username}"
                        password="${mvn.jdbc.password}"/>
        <javaModelGenerator targetPackage="com.xxx.${model.name}.entity" targetProject="../xxx-modules/xxx-system-api/src/main/java"/>

        <table tableName="sys_dept" domainObjectName="SysDept"/>
        <table tableName="sys_permission" domainObjectName="SysPermission"/>
        <table tableName="sys_role" domainObjectName="SysRole"/>
        <table tableName="sys_role_permission" domainObjectName="SysRolePermission"/>
        <table tableName="sys_slideshow" domainObjectName="SysSlideshow"/>
        <table tableName="sys_user" domainObjectName="SysUser"/>
        <table tableName="sys_user_login_log" domainObjectName="SysUserLoginLog"/>
        <table tableName="sys_user_role" domainObjectName="SysUserRole"/>

    </context>
</generatorConfiguration>